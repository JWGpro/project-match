<div class="col-sm-4 p-3 m-3 container form-container round-lg shadow bg-light">
  <h2>New Match</h2>
  <%= simple_form_for @match, url: users_path, method: :get do |f| %>
      <%= f.input :start_datetime, as: :date, html5: true, label: "When do you want to play?", input_html: { value: Date.today } %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.input :acceptance_deadline_hrs %>
      <%= f.submit "Search!", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="col-sm-4 p-3 m-3 container form-container round-lg shadow bg-light">
  <h2>Match search</h2>
  <%= form_with do %>
    <%= label_tag(:match_start_datetime, "I want to play on") %>
    <%= date_field(:match, :start_datetime) %>
    <br>
    <%= label_tag(:start_time, "between") %>
    <%= time_field(:match, :start_time) %>
    <%= label_tag(:end_time, "and") %>
    <%= time_field(:match, :end_time) %>
    <%= text_field_tag(:match_address) %>
    <%= submit_tag("Search!", class: "btn btn-primary") %>
  <% end %>
</div>
