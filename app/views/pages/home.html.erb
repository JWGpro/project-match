
<div class="banner-overlay container">
  <div class="row full-pg ">


    <div class="col-3 first-row">
      <div class="firstcolumn-wrapper container">

        <div class="ourlogo" style="background-color:white;border-radius:7px">
          <%= image_tag "real_logo.png" %>
        </div>

        <div class="personal-info">
          <img src="https://education.uky.edu/wp-content/uploads/2019/12/TL-Headshot-2squaresmall.jpg" alt="Profile-picture" class="splash-profile-pic">
          <div class="user-details">
            <p class="username" style="font-family: 'Nunito Sans';font-weight: 600;padding-bottom: 1vh;color:rgb(94,94,144)">
              <% if current_user %>
                <%= current_user.name %>
              <% end %>
            </p>
            <p class="little-title" style="font-family: 'Nunito Sans';font-weight: 900;font-size:7px;opacity:0.6;">SKILL POINT</p>
            <p class="skill-values" style="font-family: 'Nunito Sans';font-weight: 600;">
              <% if current_user %>
                <%= current_user.skill_rating %>
              <% end %>
            </p>
          </div>
        </div>

        <div class="navbarlist">
          <ul>
            <li class="nav-link home-button"><%= link_to "Home", "/" %></li><hr>
            <% if current_user %>
              <li class="nav-link"><%= link_to "Profile", "/" %></li><hr>
            <% else %>
              <li class="nav-link"><%= link_to "Login", new_user_session_path %></li><hr>
            <% end %>
            <li class="nav-link"><%= link_to "Messages", "/" %></li>
            <li class="nav-link match-button"><%= link_to "New Match", "/" %></li>
          </ul>
        </div>
      </div>
    </div>


    <div class="col-6 middle-row container">
      <div class="secondcolwrapper container">

        <h5 style="font-family:'Anton';color:#616292">Whats up?</h5>

        <div class="posting-card">
          <div class="post-news">
            <input class="news-input" type="text" placeholder="Anything...">
          </div>
          <div class="post-section">
            <input type="submit" value="Post" class="post-button">
          </div>
        </div>

        <h5 style="font-family:'Anton';color:#616292;margin-top:7%;">Community</h5>

      </div>
    </div>



    <div class="col-3 last-row" style="background-color: #F9F9F9;padding-top:5vh;">
      <div class="turnaments container">
        <div class="turnament-header">
          <h2>Upcomming turnament</h2>
        </div>
        <div class="turnament-name">
          <h2>Hoxton Local Cup</h2><i class="fas fa-trophy" style="padding-bottom:20px;"></i>
          <div class="available-players">
            <% @users=User.all%>
            <% @users.each do |user| %>
              <% if current_user %>
                <%if user.id != current_user.id%>

                  <%= link_to user_path(user.id), class: "players-link" do %>
                    <div class="players-mini-card">
                      <div class="mini-card-avatar">
                        <img class="mini-card-avatar" src="https://specials-images.forbesimg.com/imageserve/1161960426/960x0.jpg?fit=scale" alt="Roger">
                      </div>

                      <div class="players-short-description">
                        <h2 style="font-family: 'Nunito Sans';font-weight: 600;padding-bottom: 1%;color:rgb(94,94,144)"><%= user.name%></h2><hr>
                        <div class="available-date">
                          <div class="skill-div">
                            <p class="skill-availability" style="font-family: 'Nunito Sans';font-weight: 900;font-size:7px;opacity:0.6;">SKILL POINTS</p>
                            <p class="skill-values" style="font-family: 'Nunito Sans';font-weight: 600;"><%= user.skill_rating %></p>
                          </div>
                          <div class="availability-div">
                            <p class="skill-availability" style="font-family: 'Nunito Sans';font-weight: 900;font-size:7px;opacity:0.6;">NEXT AVALIBLE</p>
                            <% dayrange = ["Mon", "Tue", "Wed", "Thu", "Fri"] %>
                            <% timerange = ["after 12", "after 5", "after 6", "after 7", "after 8"] %>
                            <p class="skill-values"><%=dayrange.sample%> <%=timerange.sample%></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  <%end%>
                <%end %>
              <% end %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


